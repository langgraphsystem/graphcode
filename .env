# .env.example - Скопируйте в .env и заполните значения

# Директория для выходных файлов
OUTPUT_DIR=./out

# Модель по умолчанию
DEFAULT_MODEL=gpt-5

# Таймаут для запросов к OpenAI (секунды)
OPENAI_REQUEST_TIMEOUT=500

# Параметры PROMPT-ADAPTER
ADAPTER_MODEL=gpt-5
CODEGEN_MODEL=gpt-5

# Целевые технологии для генерации кода
ADAPTER_TARGETS=Python 3.11; Ruff+Black; Pydantic v2; asyncio; type hints strict

# Ограничения для генерации
ADAPTER_CONSTRAINTS=No secrets; reasonable perf; minimal deps

# Политика тестирования (NO_TESTS | UNIT_TESTS | TDD)
ADAPTER_TEST_POLICY=NO_TESTS

# Язык вывода для UI текстов (EN | RU)
ADAPTER_OUTPUT_LANG=EN

# Предпочтительный формат вывода (FILES_JSON | UNIFIED_DIFF | TOOLS_CALLS)
ADAPTER_OUTPUT_PREF=FILES_JSON

# Уровень логирования
LOG_LEVEL=INFO
