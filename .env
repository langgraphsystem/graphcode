# .env - Конфигурация для AI Code Generator Bot

# =========================




# ОСНОВНЫЕ НАСТРОЙКИ

# =========================

# Директория для выходных файлов

OUTPUT_DIR=./out

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)

LOG_LEVEL=INFO

# Таймаут для Graph операций (секунды)

GRAPH_TIMEOUT=60.0

# Namespace для checkpoints

CHECKPOINT_NS=prod-bot

# =========================

# МОДЕЛИ И АДАПТЕР

# =========================

# Модель для адаптера (всегда GPT-5)

ADAPTER_MODEL=gpt-5

# Модель по умолчанию для генерации кода

CODEGEN_MODEL=gpt-5

# Язык вывода для UI текстов (EN | RU)

ADAPTER_OUTPUT_LANG=EN

# Предпочтительный формат вывода

ADAPTER_OUTPUT_PREF=FILES_JSON

# =========================

# НАСТРОЙКИ АДАПТЕРА

# =========================

# Целевые технологии для генерации кода

ADAPTER_TARGETS=Python 3.11; Ruff+Black; Pydantic v2; asyncio; type hints strict

# Ограничения для генерации

ADAPTER_CONSTRAINTS=No secrets; reasonable perf; minimal deps; production quality

# Политика тестирования (NO_TESTS | UNIT_TESTS | COMPREHENSIVE_TESTS)

ADAPTER_TEST_POLICY=COMPREHENSIVE_TESTS

# =========================

# ТАЙМАУТЫ И ЛИМИТЫ

# =========================

# Таймаут для запросов к API (секунды)

REQUEST_TIMEOUT=300

# Максимальный размер файла (байты)

MAX_FILE_SIZE=10000000

# Максимальный размер архива (байты)

MAX_ARCHIVE_SIZE=50000000

# =========================

# ПУТИ К ФАЙЛАМ

# =========================

# Путь к файлу промпта адаптера

PROMPT_FILE_PATH=./config/prompt_adapter.json

# =========================

# РАСШИРЕННЫЕ НАСТРОЙКИ

# =========================

# Модуль с LangGraph приложением

APP_MODULE=graph_app

# Имя объекта приложения в модуле

APP_NAME=APP

# Безопасный режим (если true, ограниченная функциональность)

BOT_SAFE_MODE=false

# Разрешенные пользователи (через запятую, пусто = все разрешены)

# ALLOWED_USERS=123456789,987654321